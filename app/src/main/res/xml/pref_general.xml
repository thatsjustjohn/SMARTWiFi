    <!-- THRESHOLD -->
    <PreferenceCategory
        android:title="@string/pref_threshold_label">
            <CheckBoxPreference
                android:defaultValue="@bool/pref_threshold_default"
                android:key="@string/pref_threshold_key"
                android:title="@string/pref_threshold_label"
                android:summaryOn="@string/pref_show_true"
                android:summaryOff="@string/pref_show_false" />
