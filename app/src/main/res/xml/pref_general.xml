                android:title="@string/pref_threshold_connect_label"
                android:summary="@string/pref_threshold_connect_summary"
                android:inputType="text"
                android:singleLine="true" />
            <EditTextPreference
                android:defaultValue="@string/pref_threshold_disconnect_default"
                android:key="@string/pref_threshold_disconnect_key"
                android:title="@string/pref_threshold_disconnect_label"
                android:summary="@string/pref_threshold_disconnect_summary"
                android:inputType="text"
                android:singleLine="true" />
    </PreferenceCategory>




